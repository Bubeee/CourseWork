@model IEnumerable<Interfaces.Entities.Category>

@{
  ViewBag.Title = "Categories";
}

<h2>Categories</h2>

<p>
  @Html.ActionLink("Create New", "CreateCategory")
</p>
<table class="table">
  <tr>
    <th>
      @Html.DisplayNameFor(model => model.Name)
    </th>
    <th>
      @Html.DisplayNameFor(model => model.Image)
    </th>
    <th></th>
  </tr>

  @foreach (var item in Model)
  {
    <tr>
      <td>
        @Html.ActionLink(item.Name, "Index", "Types", new { categoryId = item.Id }, null)
      </td>
        <td>
            <img src="~/@Url.Content(item.Image)" alt="Image not provided" width="50" height="50"/>
        </td>
      <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) 
      </td>
    </tr>
  }

</table>
