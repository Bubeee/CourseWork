@model Interfaces.Entities.ProductTypeCreate

@{
  ViewBag.Title = "CreateType";
}

<h2>CreateType</h2>

@using (Html.BeginForm())
{
  @Html.AntiForgeryToken()

  <div class="form-horizontal">
    <h4>ProductTypeCreate</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
      @Html.LabelFor(model => model.TypeName, htmlAttributes: new { @class = "control-label col-md-2" })
      <div class="col-md-10">
        @Html.EditorFor(model => model.TypeName, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.TypeName, "", new { @class = "text-danger" })
      </div>
    </div>

    <div class="form-group">
      <h2>Attributes</h2>
      @for (int i = 0; i < Model.AttributeDescriptions.Count; i++)
      {
        <div class="col-md-10">
          @Html.TextBoxFor(create => create.AttributeDescriptions[i].AttributeName, new { @class = "text-danger" })
          @Html.DropDownListFor(create => create.AttributeDescriptions[i].AttributeType, new SelectList(Model.AttributeDescriptions.First().TypesList, "Key", "Value"))
        </div>
      }
    </div>

    <div class="form-group">
      <div class="col-md-offset-2 col-md-10">
        <input type="submit" value="Create" class="btn btn-default" />
      </div>
    </div>
  </div>
}

<div>
  @Html.ActionLink("Back to List", "Index")
</div>
